# Database Configuration (Docker Compose defaults)
POSTGRES_DB=mental_health_db
POSTGRES_USER=mh_user
POSTGRES_PASSWORD=mh_password

# Database URL for application (when using Docker)
DATABASE_URL=postgresql://mh_user:mh_password@localhost:5432/mental_health_db

# Alternative: Individual components (legacy)
DB_USERNAME=mh_user
DB_PASSWORD=mh_password
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=mental_health_db

# Server Configuration
FLASK_PORT=5000
API_PORT=5000
DEBUG=True
SECRET_KEY=your-secret-key-here

# External Services
OPENAI_API_KEY=your-openai-api-key
# REDIS_URL=redis://localhost:6379/0  # Optional for caching/background tasks

# File Storage
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=50485760  # 50MB

# Assessment Settings
DEFAULT_SESSION_TIMEOUT=3600  # 1 hour in seconds
CAMERA_MAX_PHOTOS=10
OPENAI_MODEL=gpt-3.5-turbo